<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="category"/>
                <field name="total_copies"/>
                <field name="available_copies"/>
                <field name="state"/>
                <field name="price"/>
                <field name="total_value"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_available" string="Đặt có sẵn" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'available')]}"/>
                    <button name="action_set_maintenance" string="Bảo trì" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'maintenance')]}"/>
                    <button name="action_set_borrowed" string="Đang mượn" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'borrowed')]}"/>

                    <field name="state" widget="statusbar" statusbar_visible="available,borrowed,maintenance,lost"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên sách..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="author"/>
                            <field name="isbn"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="total_copies"/>
                            <field name="available_copies"/>
                            <field name="state"/>

                        </group>

                    </group>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="total_value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Quản lý sách</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm sách đầu tiên vào thư viện!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_root" name="Thư viện" sequence="10"/>
    <menuitem id="menu_library_books" name="Sách"
              parent="menu_library_root"
              action="action_library_book"
              sequence="10"/>
</odoo>
