<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_library_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="member_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="state"/>
                <field name="membership_type"/>
                <field name="gender"/>
                <field name="join_date"/>
                <field name="expiry_date"/>
                <field name="membership_fee"/>

            </tree>
        </field>
    </record>

    <!-- Form View đơn giản -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Hoạt động"
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'active')]}"/>
                    <button name="action_suspend" string="Đình chỉ"
                            type="object" class="btn-warning"
                            attrs="{'invisible': [('state', '=', 'suspended')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Họ và tên..."/>
                        </h1>
                        <h3>
                            <field name="member_id" placeholder="Mã thành viên..."/>
                        </h3>
                    </div>

                    <group>
                        <group string="thông tin liên lạc">
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="membership_type"/>
                        </group>
                        <group string="thông tin thành viên">
                            <field name="join_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>


                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Thành viên</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_members" name="Thành viên"
              parent="menu_library_root"
              action="action_library_member"
              sequence="20"/>
</odoo>
