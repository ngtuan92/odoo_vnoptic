<odoo>
    <record id="product_lens_tree_view" model="ir.ui.view">
        <field name="name">product.lens.tree</field>
        <field name="model">product.lens</field>
        <field name="arch" type="xml">
            <tree string="Lens Details">
                <field name="product_tmpl_id"/>
                <field name="prism"/>
                <field name="base"/>
                <field name="axis"/>
                <field name="sph"/>
                <field name="cyl"/>
                <field name="len_add"/>
                <field name="diameter"/>
                <field name="corridor"/>
            </tree>
        </field>
    </record>

    <record id="product_lens_form_view" model="ir.ui.view">
        <field name="name">product.lens.form</field>
        <field name="model">product.lens</field>
        <field name="arch" type="xml">
            <form string="Lens Details">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="product_tmpl_id"/>
                            <field name="product_id"/>
                        </group>
                        <group string="Technical Specifications">
                            <field name="prism"/>
                            <field name="base"/>
                            <field name="axis"/>
                            <field name="sph"/>
                            <field name="cyl"/>
                            <field name="len_add"/>
                            <field name="diameter"/>
                            <field name="corridor"/>
                            <field name="abbe"/>
                            <field name="polarized"/>
                            <field name="prism_base"/>
                            <field name="color_int"/>
                            <field name="mir_coating"/>
                        </group>
                    </group>
                    <group>
                        <group string="Design &amp; Protection">
                            <field name="design1_id"/>
                            <field name="design2_id"/>
                            <field name="uv_id"/>
                        </group>
                        <group string="Color &amp; Material">
                            <field name="cl_hmc_id"/>
                            <field name="cl_pho_id"/>
                            <field name="cl_tint_id"/>
                            <field name="index_id"/>
                            <field name="material_id"/>
                        </group>
                    </group>
                    <group string="Coatings">
                        <field name="coating_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_lens" model="ir.actions.act_window">
        <field name="name">Lens Details</field>
        <field name="res_model">product.lens</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>