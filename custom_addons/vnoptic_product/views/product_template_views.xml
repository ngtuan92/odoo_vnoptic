<odoo>
    <record id="product_template_form_view_lens" model="ir.ui.view">
        <field name="name">product.template.form.lens</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <group string="VNOPTIC Product Information">
                    <group>
                        <field name="cid"/>
                        <field name="eng_name"/>
                        <field name="trade_name"/>
                        <field name="product_type"/>
                    </group>
                    <group>
                        <field name="rt_price"/>
                        <field name="ws_price"/>
                        <field name="ct_price"/>
                        <field name="or_price"/>
                        <field name="ws_price_max"/>
                        <field name="ws_price_min"/>
                    </group>
                    <group>
                        <field name="supplier_id"/>
                        <field name="group_id"/>
                        <field name="status_product_id"/>
                        <field name="warranty_id"/>
                    </group>
                </group>

                <notebook>
                    <page string="Lens Details" attrs="{'invisible': [('product_type', '!=', 'lens')]}">
                        <field name="lens_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="prism"/>
                                <field name="base"/>
                                <field name="axis"/>
                                <field name="sph"/>
                                <field name="cyl"/>
                                <field name="len_add"/>
                                <field name="diameter"/>
                                <field name="corridor"/>
                                <field name="design1_id"/>
                                <field name="design2_id"/>
                                <field name="uv_id"/>
                                <field name="index_id"/>
                                <field name="material_id"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Optical Details" attrs="{'invisible': [('product_type', '!=', 'opt')]}">
                        <field name="opt_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="season"/>
                                <field name="model"/>
                                <field name="serial"/>
                                <field name="sku"/>
                                <field name="gender"/>
                                <field name="lens_width"/>
                                <field name="lens_height"/>
                                <field name="bridge_width"/>
                                <field name="frame_id"/>
                                <field name="frame_type_id"/>
                                <field name="shape_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="action_lens_products" model="ir.actions.act_window">
        <field name="name">Lens Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', '=', 'lens')]</field>
        <field name="context">{'default_product_type': 'lens'}</field>
    </record>

    <record id="action_opt_products" model="ir.actions.act_window">
        <field name="name">Optical Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', '=', 'opt')]</field>
        <field name="context">{'default_product_type': 'opt'}</field>
    </record>
</odoo>