<odoo>
    <record id="product_ve_tree_view" model="ir.ui.view">
        <field name="name">product.ve.tree</field>
        <field name="model">product.ve</field>
        <field name="arch" type="xml">
            <tree string="VE (Front Part)">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="product_ve_form_view" model="ir.ui.view">
        <field name="name">product.ve.form</field>
        <field name="model">product.ve</field>
        <field name="arch" type="xml">
            <form string="VE (Front Part)">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_ve" model="ir.actions.act_window">
        <field name="name">VE (Front Part)</field>
        <field name="res_model">product.ve</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>