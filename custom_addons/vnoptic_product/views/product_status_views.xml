<odoo>
    <record id="product_status_tree_view" model="ir.ui.view">
        <field name="name">product.status.tree</field>
        <field name="model">product.status</field>
        <field name="arch" type="xml">
            <tree string="Product Status">
                <field name="name"/>
                <field name="description"/>
                <field name="activated"/>
            </tree>
        </field>
    </record>

    <record id="product_status_form_view" model="ir.ui.view">
        <field name="name">product.status.form</field>
        <field name="model">product.status</field>
        <field name="arch" type="xml">
            <form string="Product Status">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="activated"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_status" model="ir.actions.act_window">
        <field name="name">Product Status</field>
        <field name="res_model">product.status</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Product Status!
            </p>
        </field>
    </record>
</odoo>