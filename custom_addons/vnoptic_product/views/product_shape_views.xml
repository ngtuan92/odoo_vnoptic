<odoo>
    <record id="product_shape_tree_view" model="ir.ui.view">
        <field name="name">product.shape.tree</field>
        <field name="model">product.shape</field>
        <field name="arch" type="xml">
            <tree string="Shape">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="product_shape_form_view" model="ir.ui.view">
        <field name="name">product.shape.form</field>
        <field name="model">product.shape</field>
        <field name="arch" type="xml">
            <form string="Shape">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_shape" model="ir.actions.act_window">
        <field name="name">Shape</field>
        <field name="res_model">product.shape</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>