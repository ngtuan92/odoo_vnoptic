<odoo>
    <record id="product_frame_tree_view" model="ir.ui.view">
        <field name="name">product.frame.tree</field>
        <field name="model">product.frame</field>
        <field name="arch" type="xml">
            <tree string="Frame">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="product_frame_form_view" model="ir.ui.view">
        <field name="name">product.frame.form</field>
        <field name="model">product.frame</field>
        <field name="arch" type="xml">
            <form string="Frame">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_frame" model="ir.actions.act_window">
        <field name="name">Frame</field>
        <field name="res_model">product.frame</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>