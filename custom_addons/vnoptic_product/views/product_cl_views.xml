<odoo>
    <record id="product_cl_tree_view" model="ir.ui.view">
        <field name="name">product.cl.tree</field>
        <field name="model">product.cl</field>
        <field name="arch" type="xml">
            <tree string="Color/Lens Type">
                <field name="name"/>
                <field name="cid"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="product_cl_form_view" model="ir.ui.view">
        <field name="name">product.cl.form</field>
        <field name="model">product.cl</field>
        <field name="arch" type="xml">
            <form string="Color/Lens Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_cl" model="ir.actions.act_window">
        <field name="name">Color/Lens Type</field>
        <field name="res_model">product.cl</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>