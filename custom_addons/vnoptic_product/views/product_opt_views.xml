<odoo>
    <record id="product_opt_tree_view" model="ir.ui.view">
        <field name="name">product.opt.tree</field>
        <field name="model">product.opt</field>
        <field name="arch" type="xml">
            <tree string="Optical Product Details">
                <field name="product_tmpl_id"/>
                <field name="season"/>
                <field name="model"/>
                <field name="serial"/>
                <field name="sku"/>
                <field name="gender"/>
                <field name="lens_width"/>
                <field name="lens_height"/>
                <field name="bridge_width"/>
            </tree>
        </field>
    </record>

    <record id="product_opt_form_view" model="ir.ui.view">
        <field name="name">product.opt.form</field>
        <field name="model">product.opt</field>
        <field name="arch" type="xml">
            <form string="Optical Product Details">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="product_tmpl_id"/>
                            <field name="product_id"/>
                            <field name="season"/>
                            <field name="model"/>
                            <field name="serial"/>
                            <field name="oem_ncc"/>
                            <field name="sku"/>
                            <field name="gender"/>
                        </group>
                        <group string="Dimensions">
                            <field name="temple_width"/>
                            <field name="lens_width"/>
                            <field name="lens_span"/>
                            <field name="lens_height"/>
                            <field name="bridge_width"/>
                        </group>
                    </group>
                    <group>
                        <group string="Frame Information">
                            <field name="frame_id"/>
                            <field name="frame_type_id"/>
                            <field name="shape_id"/>
                            <field name="ve_id"/>
                            <field name="temple_id"/>
                        </group>
                        <group string="Materials &amp; Colors">
                            <field name="material_ve_id"/>
                            <field name="material_temple_tip_id"/>
                            <field name="material_lens_id"/>
                            <field name="color_lens_id"/>
                            <field name="color"/>
                            <field name="color_front"/>
                            <field name="color_temple"/>
                        </group>
                    </group>
                    <group string="Coatings &amp; Materials">
                        <field name="coating_ids" widget="many2many_tags"/>
                        <field name="materials_front_ids" widget="many2many_tags"/>
                        <field name="materials_temple_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_opt" model="ir.actions.act_window">
        <field name="name">Optical Product Details</field>
        <field name="res_model">product.opt</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>